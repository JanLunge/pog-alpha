{
  "name": "pog",
  "description": "A KMK firmware configurator",
  "version": "0.2.0",
  "private": true,
  "main": "main.js",
  "author": "Jan Lunge",
  "build": {
    "appId": "pog.heaper.de",
    "icon": "./build/icon.png",
    "mac": {
      "category": "productivity"
    }
  },
  "files": [
    "package.json",
    "frontend_dist/**/*",
    "node_modules",
    "!src",
    "!release"
  ],
  "scripts": {
    "dev": "vite",
    "build": "run-p type-check build-only",
    "preview": "vite preview",
    "build-only": "vite build",
    "type-check": "vue-tsc --noEmit",
    "electron:start": "electron .",
    "lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix --ignore-path .gitignore",
    "pack": "electron-builder --dir",
    "dist-m": "yarn build && NODE_ENV=production electron-builder -c.extraMetadata.mode=build --mac --x64 --arm64",
    "dist-w": "yarn build && NODE_ENV=production electron-builder -c.extraMetadata.mode=build --win --x64 --arm64",
    "dist-l": "yarn build && NODE_ENV=production electron-builder -c.extraMetadata.mode=build --linux --x64 --arm64",
    "devtools": "./node_modules/.bin/vue-devtools"
  },
  "dependencies": {
    "@viselect/vue": "^3.2.5",
    "@vue/devtools": "^6.5.0",
    "@vueuse/core": "^9.12.0",
    "autoprefixer": "^10.4.13",
    "daisyui": "^2.45.0",
    "decompress": "^4.2.1",
    "electron-devtools-installer": "^3.2.0",
    "filbert": "^0.1.20",
    "fs-extra": "^11.1.0",
    "json5": "^2.2.3",
    "postcss": "^8.4.20",
    "request": "^2.88.2",
    "sass": "^1.57.1",
    "shell": "^0.5.1",
    "slice-lines": "^1.0.3",
    "tailwindcss": "^3.2.4",
    "vue": "^3.2.47",
    "vue-router": "^4.1.6"
  },
  "devDependencies": {
    "@rushstack/eslint-patch": "^1.1.4",
    "@types/electron": "^1.6.10",
    "@types/node": "^18.11.12",
    "@vitejs/plugin-vue": "^4.0.0",
    "@vue/eslint-config-prettier": "^7.0.0",
    "@vue/eslint-config-typescript": "^11.0.0",
    "@vue/tsconfig": "^0.1.3",
    "electron": "^22.2.0",
    "electron-builder": "^23.6.0",
    "eslint": "^8.22.0",
    "eslint-plugin-vue": "^9.3.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.7.1",
    "typescript": "~4.7.4",
    "vite": "^4.0.0",
    "vue-tsc": "^1.0.12"
  }
}
